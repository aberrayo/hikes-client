{{#each hikes as |hike|}}
  <section data-id="{{hikes.id}}">
      <div class="CrudAlerts"></div>
      <span><h4><strong>Location:</strong>   {{hike.location}}</h4></span>
       <br>
        <span><strong>Trail_name:</strong>   {{hike.trail_name}}</span>
        <br>
        <span><strong>Distance_miles:</strong>   {{hike.distance_miles}} miles</span>
         <br>
        <span><strong>Date:</strong>  {{hike.date}}</span>
        <br>
    <form class="edit-hike-form" data-id="{{hike.id}}">
        <input type="text" class="form-control-sm" name="hike[location]" placeholder="location" required>
        <input type="text" class="form-control-sm" name="hike[trail_name]" placeholder="Trail Name" required>
        <input type="number" class="form-control-sm" name="hike[distance_miles]" placeholder="Distance"  required>
        <input type="date" class="form-control-sm" name="hike[date]" placeholder="Date" required>
        <input type="submit"  class="btn btn-primary btn-sm edit-hike-button" value="Update">
    </form>

     {{> partial}}

     <button data-id="{{hike.id}}" class="btn btn-danger btn-sm delete">Remove</button>

    </section>

{{/each}}
